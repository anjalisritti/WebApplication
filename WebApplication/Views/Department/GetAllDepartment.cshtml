@model IEnumerable<WebApplication.Models.Department>

<p>
    @Html.ActionLink("Create New", "InsertDepartment")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.departmentName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.departmentDesc)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.departmentName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.departmentDesc)
        </td>
        <td>
            @Html.ActionLink("Edit", "UpdateDepartment", new { id=item.Id }) | |
            @Html.ActionLink("Delete", "DeleteDepartment", new { id=item.Id }, new { onclick = "return confirm('Are sure wants to delete?');" })
        </td>
    </tr>
}

</table>
